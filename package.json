{
  "name": "that-api-garage",
  "version": "3.3.5",
  "description": "THAT Garage api. Where all the other stuff goes",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && node index.js",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "node index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.2.1",
    "@google-cloud/firestore": "^6.4.1",
    "@google-cloud/trace-agent": "^7.1.2",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.14",
    "@sentry/node": "~7.24.2",
    "@thatconference/api": "~3.4.2",
    "@thatconference/schema": "~3.1.0",
    "apollo-datasource-rest": "^3.7.0",
    "apollo-server-express": "^3.11.1",
    "dataloader": "^2.1.0",
    "dayjs": "^1.11.7",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.1",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "postmark": "^3.0.14",
    "response-time": "^2.3.2",
    "slugify": "^1.6.5",
    "stripe": "^11.2.0",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "babel-jest": "^29.3.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest-cli": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier-eslint": "^15.0.1",
    "prettier-eslint-cli": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-garage"
  },
  "license": "GPL-3.0"
}
