{
  "name": "that-api-garage",
  "version": "1.0.0",
  "description": "THAT Garage api. Where all the other stuff goes",
  "main": "index.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && functions-framework --target=handler --port=8005 --verbose",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "functions-framework --target=handler",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "dependencies": {
    "@apollo/federation": "^0.20.7",
    "@google-cloud/firestore": "^4.8.1",
    "@google-cloud/functions-framework": "^1.7.1",
    "@graphql-tools/load-files": "^6.2.5",
    "@graphql-tools/merge": "^6.2.6",
    "@sentry/node": "^6.0.2",
    "@thatconference/api": "^1.15.3",
    "@thatconference/schema": "^1.0.1",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "dataloader": "^2.0.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.7.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "response-time": "^2.3.2",
    "slugify": "^1.4.6",
    "stripe": "^8.132.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier-eslint": "^10.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-notifications"
  },
  "license": "GPL-3.0"
}
